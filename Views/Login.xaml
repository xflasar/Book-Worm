<UserControl x:Class="Book_Worm.Views.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Book_Worm.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="white">
        <Label Content="Label" HorizontalAlignment="Left" Margin="28,28,0,0" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="28,58,0,0" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="28,88,0,0" VerticalAlignment="Top"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="250" Width="250">
            <DockPanel x:Name="stackPanel" LastChildFill="True">
                <Label Width="75">Username</Label>
                <TextBox Width="Auto"/>
            </DockPanel>
            <DockPanel Margin="0, 15, 0, 0">
                <Label Width="75">Password</Label>
                <TextBox />
            </DockPanel>
            <Button Margin="50, 15, 50, 0" MinWidth="100" MinHeight="25" MaxHeight="50" Click="Sign_In" Content="Sign in"/>
        </StackPanel>
    </Grid>
</UserControl>
